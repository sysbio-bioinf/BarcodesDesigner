<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane fx:id="contentPane" hgap="30.0" vgap="10.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.code.controller.InitialBarcodeSetController">
    <children>
        <HBox fx:id="loadInitialSetBox" spacing="5.0" GridPane.rowIndex="0">
            <children>
                <RadioButton fx:id="loadInitialSetButton" mnemonicParsing="false" selected="true"/>
                <Label fx:id="loadInitialSetLabel" onMouseClicked="#selectLoadInitialSetButton" wrapText="true" />
            </children>
        </HBox>
        <Button fx:id="chooseFileButton" alignment="TOP_LEFT" disable="false" minWidth="80"
                mnemonicParsing="false" text="Choose..." onAction="#openFileChooser"
                GridPane.columnIndex="1" GridPane.rowIndex="0" GridPane.valignment="TOP" />
        <HBox fx:id="generateInitialSetBox" spacing="5.0" GridPane.rowIndex="1">
            <children>
                <RadioButton fx:id="generateInitialSetButton" mnemonicParsing="false" selected="false"/>
                <Label fx:id="generateInitialSetLabel" onMouseClicked="#selectGenerateInitialSetButton" wrapText="true" />
            </children>
        </HBox>
    </children>
</GridPane>

